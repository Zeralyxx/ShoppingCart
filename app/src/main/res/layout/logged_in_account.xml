<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#7E57C2"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSignup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginEnd="40dp"
            android:text="Signup"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#7E57C2"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myOrders"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_marginTop="4dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToReceive"
            android:layout_width="169dp"
            android:layout_height="144dp"
            android:text="To Receive"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#7E57C2"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.174" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelled"
            android:layout_width="169dp"
            android:layout_height="144dp"
            android:text="Cancelled"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#7E57C2"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnToReceive"
            app:layout_constraintVertical_bias="0.391" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReturns"
            android:layout_width="169dp"
            android:layout_height="144dp"
            android:text="Returns"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#7E57C2"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.719"
            app:layout_constraintStart_toEndOf="@+id/btnCancelled"
            app:layout_constraintTop_toBottomOf="@+id/btnHistory"
            app:layout_constraintVertical_bias="0.391" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            android:layout_width="169dp"
            android:layout_height="144dp"
            android:text="History"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#7E57C2"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.719"
            app:layout_constraintStart_toEndOf="@+id/btnToReceive"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.174" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
